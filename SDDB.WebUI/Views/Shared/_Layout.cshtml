@using SDDB.WebUI.Infrastructure

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Images/SolDataIcon.png">
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    <link href="/Content/SDDB/Site.css" rel="stylesheet" />
</head>

<body>

    <!------------ Navbar Section -------------->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" rel="home" href="@Url.Action("Index","Home",null)" title="SDDB Home">
                    <img style="margin-top: -14px;" src="~/Images/SDDB_Home.png" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                @*
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Common Tasks <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Your Activity</a></li>
                            <li><a href="#">Your Activity</a></li>
                            <li><a href="#">Your Activity</a></li>
                        </ul>
                    </li>
                    <li><a href="#"></a></li>
                </ul>    
                *@ 
                
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Logout","DBUSer",null)" title="Click to Log Out"><strong style="color:red">@Html.GetUserFullName()</strong>&nbsp;&nbsp;<span class="glyphicon glyphicon-log-out"></span></a></li>
                </ul>
            </div>
        </div>
    </div>
    
    <!------------ Main Section ---------------->
    @RenderBody()

    <!------------ ModalInfo dialog ------------>
    <div class="modal fade" id="ModalInfo" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="ModalInfoLabel">Information</h4>
                </div>
                <div class="modal-body">
                    <div id="ModalInfoBody"></div>
                    <pre id="ModalInfoBodyPre"></pre>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-warning" id="ModalInfoBtnOk">
                        &nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;&nbsp;&nbsp;
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!----------- ModalDelete dialog ----------->
    <div class="modal fade" id="ModalDelete" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="ModalDeleteLabel">Confirm Delete</h4>
                </div>
                <div class="modal-body">
                    <div id="ModalDeleteBody"></div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default pull-left" id="ModalDeleteBtnCancel">Cancel</button>
                    <button class="btn btn-warning" id="ModalDeleteBtnOk">
                        &nbsp;&nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-ok"></span>&nbsp;&nbsp;&nbsp;&nbsp;
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!------------ ModalWait dialog ------------>
    <div class="modal" id="ModalWait" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="ModalWaitLabel">Please Wait...</h4>
                </div>
                <div class="modal-body" id="ModalWaitBody">
                    <div class="text-center">
                        <img src="/Images/loading_spinner.gif" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!------------------ Footer ---------------->
    <footer class="footer">
        <div class="container-fluid">
            <hr />
            <p class="text-muted text-center"> V1.02 2015-08-28 &nbsp;<span class="glyphicon glyphicon-th"></span>&nbsp; Design By TDO</p>
        </div>
    </footer>

    <!----------------Scripts and CSS----------->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/moment")
    <script src="/Scripts/SDDB/Shared.js"></script>

    @Styles.Render("~/bundles/jquery-ui-CSS")

    @RenderSection("scripts", required: false)

    @RenderSection("CSS", required: false)
</body>
</html>