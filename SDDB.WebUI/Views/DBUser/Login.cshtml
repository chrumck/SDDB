@model SDDB.WebUI.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/Images/SolDataIcon.png">
    <title>SDDB Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/SDDB/Login.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <form class="form-signin" method="post">
            @Html.AntiForgeryToken();
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

            <h2 class="form-signin-heading">Log In to SDDB</h2>

            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "SDDB Login", required = "", autofocus = "" })

            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password", required = "" })

            @Html.ValidationSummary()
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

            @if (ViewBag.Authorized == true)
            {
                <div onclick="history.go(-1); return false;" class="btn btn-lg btn-default btn-block">Go back</div>
            }
        </form>

    </div>

</body>

</html>
